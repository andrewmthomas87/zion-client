{
	"compilerOptions": {
		"baseUrl": "./src",
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"jsx": "react",
		"module": "ESNext",
		"moduleResolution": "Node",
		"paths": {
			"~*": ["./*"]
		},
		"strict": true,
		"target": "ESNext"
	},
	"include": ["src/**/*"]
}
